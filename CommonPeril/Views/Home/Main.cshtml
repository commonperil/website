@model CommonPeril.Models.ZoomUsageModel

@{
    ViewBag.Title = "Main";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Request Data</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link" href="">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                       
                        
                    </div>
                </div>
                <div class="ibox-content">
                    <form asp-controller="Home" asp-action="Main">

                        <div class="form-group row col-lg-5">

                            
                            <div class="col-lg-6">
                                
                                <label class="col-lg-4 col-form-label" for="year">Year</label>
                                @Html.DropDownListFor(model => model.Year, Model.YearList)
                            
                            </div>
                        </div>
                        <div class="form-group row col-lg-5">
                            <div class="col-lg-6">
                                <label class="col-lg-4 col-form-label" for="month">Month</label>
                                @Html.DropDownListFor(model => model.Month, Model.MonthList)
                            </div>

                        </div>

                        <div class="col-sm-4">
                            <div class="form-group">
                                <button class="btn btn-primary btn-sm" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
       
        <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Zoom Data</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link" href="">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>

                            <a class="close-link" href="">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>

                                    <th>Date </th>
                                    <th>Participants</th>
                                    <th>Meetings</th>
                                    <th>Minutes</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.ZoomData) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MeetingDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Users)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Meetings)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalMinutes)
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
       
    </div>
</div>


